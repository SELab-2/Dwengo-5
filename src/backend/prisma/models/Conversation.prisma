model Conversation {
  id                 Int            @id @default(autoincrement())
  title              String         @db.VarChar
  group_id           Int
  assignment_id      Int
  learning_object_id String         @db.VarChar
  assignments        Assignment     @relation(fields: [assignment], references: [id], onDelete: Cascade, onUpdate: NoAction)
  group              Group          @relation(fields: [group], references: [id], onDelete: Cascade, onUpdate: NoAction)
  learning_object    LearningObject @relation(fields: [learning_object], references: [id], onDelete: NoAction, onUpdate: NoAction)
  messages           Message[]
}
