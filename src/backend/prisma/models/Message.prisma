model Message {
  id                                              Int                       @id @default(autoincrement())
  content                                         String?                   @db.VarChar
  offset                                          Unsupported("int8range")?
  is_student                                      Boolean
  student                                         Int?
  teacher                                         Int?
  index                                           Int
  conversation                                    Int
  conversation_message_conversationToconversation Conversation              @relation("message_To_conversation", fields: [conversation], references: [id], onDelete: Cascade, onUpdate: NoAction)
  students                                        Student?                  @relation(fields: [student], references: [id], onDelete: Cascade, onUpdate: NoAction)
  teachers                                        Teacher?                  @relation(fields: [teacher], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
